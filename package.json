{
  "name": "@logux/server",
  "version": "0.8.6",
  "description": "Build own Logux server or make proxy between WebSocket and HTTP backend on any language",
  "keywords": [
    "logux",
    "server",
    "framework",
    "websocket",
    "proxy",
    "crdt",
    "event sourcing",
    "distributed systems",
    "collaborative"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/",
    "test": "jest-ci --forceExit --runInBand --coverage && eslint-ci . && check-dts && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/server",
  "engines": {
    "node": ">=10.0.0"
  },
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./index.mjs"
    },
    "./": "./"
  },
  "dependencies": {
    "@logux/core": "^0.5.3",
    "JSONStream": "^1.3.5",
    "chalk": "^4.0.0",
    "dotenv": "^8.2.0",
    "globby": "^11.0.0",
    "ip": "^1.1.5",
    "nanoevents": "^5.1.5",
    "nanoid": "^3.1.5",
    "pino": "^6.2.1",
    "semver": "^7.3.2",
    "strip-ansi": "^6.0.0",
    "url-pattern": "^1.0.3",
    "ws": "^7.2.5",
    "yargs": "^15.3.1",
    "yyyy-mm-dd": "^1.0.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^36.1.3",
    "@logux/sharec-config": "^0.6.4",
    "@types/node": "^13.13.5",
    "@types/pino": "^6.0.0",
    "check-dts": "^0.3.0",
    "clean-publish": "^1.1.7",
    "cross-spawn": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^19.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.2.2",
    "nanodelay": "^1.0.1",
    "print-snapshots": "^0.3.0",
    "rimraf": "^3.0.2",
    "typescript-fsa": "^3.0.0",
    "yaspeller-ci": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/server/index.js"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "overrides": [
      {
        "files": ["human-formatter/index.js"],
        "rules": {
          "no-invalid-this": "off"
        }
      }
    ]
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ “[^”]+”"
    ],
    "dictionary": [
      "Versioning",
      "JSDoc",
      "backend",
      "js",
      "logux",
      "CLI",
      "pino",
      "Bunyan",
      "GraphQL",
      "WebSocket",
      "io",
      "ES",
      "TypeDoc"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.6.4"
  }
}
