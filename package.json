{
  "name": "@logux/server",
  "version": "0.9.6",
  "description": "Build own Logux server or make proxy between WebSocket and HTTP backend on any language",
  "keywords": [
    "logux",
    "server",
    "framework",
    "websocket",
    "proxy",
    "crdt",
    "event sourcing",
    "distributed systems",
    "collaborative"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --forceExit --runInBand --coverage && eslint . && check-dts && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/server",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "type": "module",
  "types": "./index.d.ts",
  "dependencies": {
    "@logux/core": "logux/core#next",
    "JSONStream": "^1.3.5",
    "colorette": "^1.2.1",
    "cookie": "^0.4.1",
    "dotenv": "^8.2.0",
    "globby": "^11.0.2",
    "ip": "^1.1.5",
    "nanodelay": "^1.0.6",
    "nanoevents": "^5.1.11",
    "nanoid": "^3.1.20",
    "pino": "^6.11.1",
    "semver": "^7.3.4",
    "strip-ansi": "^6.0.0",
    "url-pattern": "^1.0.3",
    "ws": "^7.4.3",
    "yargs": "^16.2.0",
    "yyyy-mm-dd": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@logux/eslint-config": "^44.1.2",
    "@logux/sharec-config": "^0.8.5",
    "@types/cross-spawn": "^6.0.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.28",
    "@types/pino": "^6.3.5",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "check-dts": "^0.4.4",
    "clean-publish": "^1.1.8",
    "cross-spawn": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.17.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "esm": "^3.2.25",
    "husky": "^4.3.8",
    "jest": "^27.0.0-next.2",
    "lint-staged": "^10.5.4",
    "print-snapshots": "^0.3.2",
    "ts-jest": "^27.0.0-next.4",
    "typescript": "^4.1.5",
    "typescript-fsa": "^3.0.0",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/server/index.js"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": [
          "human-formatter/index.js"
        ],
        "rules": {
          "no-invalid-this": "off"
        }
      },
      {
        "files": [
          "server/index.js"
        ],
        "rules": {
          "node/global-require": "off"
        }
      },
      {
        "files": [
          "create-reporter/index.test.ts",
          "server/types.ts"
        ],
        "rules": {
          "import/order": "off"
        }
      }
    ],
    "globals": {
      "NodeJS": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ “[^”]+”"
    ],
    "dictionary": [
      "Versioning",
      "JSDoc",
      "backend",
      "js",
      "logux",
      "CLI",
      "pino",
      "Bunyan",
      "GraphQL",
      "WebSocket",
      "io",
      "ES",
      "TypeDoc",
      "roadmap"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
